<div class="container">
    <h1>Create Question for Quiz: <%= quizId %></h1>
    <form action="/questions/<%= quizId %>" method="POST">
        <div class="mb-3">
            <label for="text" class="form-label">Question Text</label>
            <input type="text" class="form-control" id="text" name="text" required>
        </div>
        <div class="mb-3">
            <label for="options" class="form-label">Options (comma-separated)</label>
            <input type="text" class="form-control" id="options" name="options" required>
        </div>
        <div class="mb-3">
            <label for="correctAnswerIndex" class="form-label">Correct Answer Index</label>
            <input type="number" class="form-control" id="correctAnswerIndex" name="correctAnswerIndex" required>
        </div>
        <button type="submit" class="btn btn-primary">Create Question</button>
    </form>
</div>