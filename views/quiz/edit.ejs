<div class="container">
    <h1>Edit Quiz</h1>
    <form action="/quizzes/<%= quiz._id %>?_method=PUT" method="POST">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" name="title" value="<%= quiz.title %>" required>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" id="description" name="description" required><%= quiz.description %></textarea>
        </div>
        <button type="submit" class="btn btn-warning">Update Quiz</button>
    </form>
</div>